rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Allow the specific hardcoded admin to bootstrap themselves
    function isHardcodedAdmin() {
      return isAuthenticated() && request.auth.token.email == 'josedavidlobo4@gmail.com';
    }

    // Users collection
    match /users/{userId} {
      // Allow reading users if authenticated
      allow read: if isAuthenticated();
      
      // Allow create if:
      // 1. It's an existing admin creating another user
      // 2. It's the hardcoded admin creating their own profile (bootstrapping)
      allow create: if isAdmin() || (isHardcodedAdmin() && isOwner(userId));
      
      allow delete: if isAdmin();
      
      // Admin can update anyone, users can update their own non-sensitive data
      allow update: if isAdmin() || isOwner(userId);
    }

    // Services collection
    match /services/{serviceId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow delete: if isAdmin();
      allow update: if isAdmin() || 
        (isAuthenticated() && resource.data.assignedTechnicianId == request.auth.uid);
    }

    // Sedes collection
    match /sedes/{sedeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
